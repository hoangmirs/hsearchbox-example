<li class="search-item">
  <%= link_to user do %>
    <div class="col-xs-12 col-sm-3 col-md-3">
      <%= image_tag user.avatar, class: "img-responsive" %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-9">
      <div class="row">
        <strong><%= user.fullname %></strong>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= user.email %>
        </div>
      </div>
      <div class="row">
        <i><%= User.name %></i>
      </div>
    </div>
    <div class="clearfix"></div>
  <% end %>
</li>
