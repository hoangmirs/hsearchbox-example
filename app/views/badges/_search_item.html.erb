<li class="search-item">
  <%= link_to badge do %>
    <div class="col-xs-12 col-sm-3 col-md-3">
      <%= image_tag badge.image, class: "img-responsive" %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-9">
      <div class="row">
        <strong><%= badge.name %></strong>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= badge.user.fullname %>
        </div>
      </div>
      <div class="row">
        <i><%= Badge.name %></i>
      </div>
    </div>
    <div class="clearfix"></div>
  <% end %>
</li>
